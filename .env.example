# =============================================================================
# Cache & Performance Settings
# =============================================================================
# How long to cache market data before refreshing (in minutes)
APP_CACHE_TTL_MINUTES=30

# How often to automatically scrape and refresh market data (in minutes)
APP_SCRAPING_INTERVAL_MINUTES=30

# Cache duration for /market/summary endpoint (in minutes)
APP_MARKET_SUMMARY_TTL_MINUTES=15

# Cache duration for exchange rates from BNM (in seconds, 1800 = 30 minutes)
APP_FX_CACHE_TTL_SECONDS=1800

# =============================================================================
# Logging Configuration
# =============================================================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
APP_LOG_LEVEL=INFO

# =============================================================================
# CORS Configuration
# =============================================================================
# Allowed origins for CORS (must be valid JSON array)
# Add your frontend URLs here
APP_CORS_ORIGINS='["http://localhost:5173","http://127.0.0.1:5173","http://localhost:3000"]'

# =============================================================================
# Application Settings
# =============================================================================
# Server host and port (for development)
# APP_HOST=0.0.0.0
# APP_PORT=8000

# =============================================================================
# External APIs (if needed)
# =============================================================================
# Add API keys or tokens for external services if required
# EXTERNAL_API_KEY=your_api_key_here

# =============================================================================
# Development Settings
# =============================================================================
# Enable debug mode (do not use in production!)
# APP_DEBUG=false

# Enable API documentation
# APP_DOCS_ENABLED=true

